<?php

/**
 * @file.
 */

use \Drupal\user\Entity\User;


/**
 * Implements hook_ENTITY_TYPE_update.
 */
function afrikaburn_notification_node_update($entity){

  $bundle = $entity->bundle();

  if (in_array($bundle, ['art', 'performances', 'mutant_vehicles', 'theme_camps'])){

    module_load_include('inc', 'afrikaburn_notification', 'includes/email');

    $user = User::load(\Drupal::currentUser()->id());
    $stage = $entity->get('field_form_mode')->value;
    $complete = array_column($entity->get('field_prjr_complete')->getValue(), 'value');
    $state = in_array($stage, $complete) ? 'update' : 'new';
    $settings = \Drupal::config('afrikaburn_notification.settings');
    $collective = _afrikaburn_notification_collective($entity);

    $address = [
      'to' => [
        'collective' => $collective['title'] . '<shared@afrikaburn.com>',
        'wranglers' => $settings->get($bundle . '-wranglers'),
      ],
      'from' => [
        'collective' => $settings->get($bundle . '-wranglers'),
        'wranglers' =>
          $user->field_first_name->value .
          '"' . $user->name . '"' .
          $user->field_last_name->value . ' via AfrikaBurn Tribe' .
          '<' . $user->field_display_mail->value . '>',
      ],
      'bcc' => [
        'collective' => $collective['members'],
        'wranglers' => NULL,
      ],
    ];

    foreach(['collective', 'wranglers'] as $recipient){
      $result = \Drupal::service('plugin.manager.mail')->mail(
        'afrikaburn_notification',
        $state . '_project_registration',
        $address['to'][$recipient],
        \Drupal::currentUser()->getPreferredLangcode(),
        [
          'from' => $address['from'][$recipient],
          'subject' => $settings->get(
            implode('-', [$bundle, $stage, $state, $recipient, 'subject'])
          ),
          'message' => $settings->get(
            implode('-', [$bundle, $stage, $state, $recipient, 'body'])
          ),
          'bcc' => $address['bcc'][$recipient],
          'node' => $entity,
        ],
        $address['from'][$recipient],
        TRUE
      );
    }
  }
}


/**
 * Implements hook_mail().
 */
function afrikaburn_notification_mail($key, &$message, $params) {

  module_load_include('inc', 'afrikaburn_notification', 'includes/email');

  $node = $params['node'];
  $bundle = $node ? $node->bundle() : FALSE;

  if (in_array($bundle, ['art', 'mutant_vehicles', 'performances', 'theme_camps'])){

    $body = $params['message'];

    _afrikaburn_notification_entity_render($node, $body);
    _afrikaburn_notification_entity_diff($node, $body);

    $body = \Drupal::token()->replace(
      $body,
      [
        'node' => $node,
        'node' => $node,
      ],
      ['clear' => true]
    );

    $message['subject'] = $params['subject'];
    $message['headers']['from'] = $params['from'];
    $message['headers']['reply-to'] = $params['from'];
    $message['headers']['bcc'] = $params['bcc'];
    $message['headers']['Content-Type'] = 'text/html; charset=UTF-8; format=flowed; delsp=yes';
    $message['body'] = [];
    $message['body'][] = _afrikaburn_notification_email_images($message, $body);
  }
}
